<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="using:_3DSpectrumVisualizer"
		mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		x:Class="_3DSpectrumVisualizer.MainWindow"
		Title="_3DSpectrumVisualizer">
	<Window.Styles>
		<Style Selector="Slider">
			<Setter Property="Margin" Value="3"></Setter>
			<Setter Property="MaxHeight" Value="40"></Setter>
			
			<Setter Property="RenderTransform">
				<Setter.Value>
					<TransformGroup>
						<TranslateTransform X="0" Y="-10"></TranslateTransform>
					</TransformGroup>
				</Setter.Value>
			</Setter>
		</Style>
		<Style Selector="CheckBox">
			<Setter Property="Margin" Value="0"></Setter>
			<Setter Property="HorizontalAlignment" Value="Center"></Setter>
		</Style>
	</Window.Styles>
	<Grid ColumnDefinitions="100,100,*" RowDefinitions="Auto,Auto,Auto,*">
		<Slider Grid.Row="0" Grid.Column="0"  Value="{Binding #Canvas.ScalingFactor, Mode=TwoWay}"></Slider>
		<Slider Grid.Row="1" Grid.Column="0" Value="{Binding #Canvas.XTranslate, Mode=TwoWay}"></Slider>
		<Slider Grid.Row="2" Grid.Column="0" Value="{Binding #Canvas.YTranslate, Mode=TwoWay}"></Slider>
		<Slider Grid.Row="0" Grid.Column="1" Value="{Binding #Canvas.ScanSpacing, Mode=TwoWay}"></Slider>
		<Slider Grid.Row="1" Grid.Column="1" Value="{Binding #Canvas.XRotate, Mode=TwoWay}"></Slider>
		<Slider Grid.Row="2" Grid.Column="1" Value="{Binding #Canvas.YRotate, Mode=TwoWay}"></Slider>
		<Slider Grid.Row="0" Grid.Column="2" Value="{Binding #Canvas.ZRotate, Mode=TwoWay}"></Slider>
		<Slider Grid.Row="1" Grid.Column="2" Value="{Binding #Canvas.ZScalingFactor, Mode=TwoWay}"></Slider>
		<CheckBox Grid.Row="2" Grid.Column="2" IsChecked="{Binding #Canvas.RenderEnabled, Mode=TwoWay}"
				  Checked="OnRenderChecked">
			Rendering Enabled
		</CheckBox>
		<local:CustomSkiaPage x:Name="Canvas" Grid.Row="3" Grid.ColumnSpan="3" ></local:CustomSkiaPage>
	</Grid>
</Window>
